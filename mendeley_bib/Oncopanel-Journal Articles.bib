doi = {10.1373/clinchem.2014.222331},
file = {:Users/evayap/Library/Application Support/Mendeley Desktop/Downloaded/Neves et al. - 2014 - Genomic High-Resolution Profiling of Single CKposCD45neg Flow-Sorting Purified Circulating Tumor Cells from Patien.pdf:pdf},
